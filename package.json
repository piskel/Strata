{
  "name": "strata",
  "version": "0.0.1",
  "description": "A serverless file-sharing web app.",
  "main": "index.js",
  "scripts": {
    "next:build": "cd ./public && next build && next export -o ./../dist/",
    "next:dev": "cd ./public && next dev",
    "next:clean": "rimraf ./public/.next/ ./public/next-env.d.ts",
    "next:watch": "nodemon --watch pages --ext * -x \"npm run next:build\"",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piskel/strata.git"
  },
  "author": "Piskel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piskel/strata/issues"
  },
  "homepage": "https://github.com/piskel/strata#readme",
  "dependencies": {
    "@chakra-ui/react": "^1.6.1",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "framer-motion": "^4.1.13",
    "ipfs-core": "^0.5.4",
    "next": "^10.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "concurrently": "^6.0.2",
    "copyfiles": "^2.4.1",
    "express": "^4.17.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
