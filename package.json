{
  "name": "strata",
  "version": "0.0.1",
  "description": "A serverless file-sharing web app.",
  "main": "index.js",
  "scripts": {
    "compile": "concurrently \"npx tsc --project ./public/ \" \"copyfiles -e \"./**/*.ts\" --error -u 1 ./public/**/* ./dist/public/\" \"copyfiles --error -u 3 ./node_modules/ipfs-core/dist/index.min.js ./dist/public/js/ipfs\"",
    "watch": "nodemon --watch public --ext * -x \"npm run compile\"",
    "dev": "npx tsc --project ./server/ && concurrently \"npm run watch\" \"node ./dist/server/index.js\"",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piskel/strata.git"
  },
  "author": "Piskel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piskel/strata/issues"
  },
  "homepage": "https://github.com/piskel/strata#readme",
  "dependencies": {
    "ipfs-core": "^0.5.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "concurrently": "^6.0.2",
    "copyfiles": "^2.4.1",
    "express": "^4.17.1",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
